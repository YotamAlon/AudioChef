<AudioChefWindow>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: "Welcome to AudioChef.\nIn the future you'll be able to create recipes for me to cook"
        BoxLayout:
            Button:
                on_release: ext_dropdown.open(self)
            DropDown:
                id: ext_dropdown
            Button:
                text: "GO"
                on_release: root.execute_recipe()
    Label:
        text: "The files you chose are:"
    ScrollView:
        BoxLayout:
            id: file_box
            size_hint_x: None
    ScrollView:
        BoxLayout:
            id: transform_box
            size_hint_x: None
    ScrollView:
        BoxLayout:
            id: args_box

<SelectableButton>:
    size: 120, 50
    size_hint: None, None
    background_color: 'grey'

<ArgumentBox>:
    Label:
        text: root.name
    TextInput:
        id: text_input
        text: root.text
        on_text: root.text = self.text