#:kivy 2.0.0
#:include kv/ext_box.kv
#:include kv/files_box.kv
#:include kv/general.kv
#:include kv/helpers.kv
#:include kv/name_box.kv
#:include kv/transform_parameter_popup.kv
#:include kv/error_popup.kv
#:include kv/plugin_popup.kv
#:include kv/transforms_box.kv


<AudioChefWindow>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.1
        Rectangle:
            pos: self.pos[0] + 50, self.pos[1] + 50
            size: self.size[0] - 100, self.size[1] - 100
            source: 'assets/chef_hat.png'
    orientation: 'vertical'
    name_changer: name_item
    ext_box: ext_item
    transforms_box: transforms_item
    presets_box: presets_box
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .50
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: 40
                Label:
                    text: 'Presets'
                Button:
                    text: 'Configure app (or press F1)'
                    on_release: app.open_settings()
                    size_hint_x: None
                    width: 240
            BoxLayout:
                id: presets_box
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Line:
                        width: 1
                        rectangle: self.x, self.y, self.width, self.height
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                height: 40
                size_hint_y: None
                Label:
                    text: 'Current preset'
                Button:
                    text: 'Save Preset'
                    on_release: root.save_preset()
                Button:
                    text: "Execute Preset"
                    on_release: root.execute_preset()
                Button:
                    text: "Add Plugin"
                    on_release: root.open_plugin_selector()
            BoxLayout:
                orientation: 'vertical'
                ExtBox:
                    id: ext_item
                    size_hint_y: None
                    height: 30
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                NameChangerBox:
                    id: name_item
                    height: 85
                    size_hint_y: None
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                TransformsBox:
                    id: transforms_item
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
                FilesBox:
                    id: file_item
                    canvas.before:
                        Color:
                            rgba: 0, 0, 0, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height
