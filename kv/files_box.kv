<FilesBox@BoxLayout>:
    orientation: 'vertical'
    Label:
        text: 'Added files'
        height: 25
        size_hint_y: None
        pos_hint: {'top': 1}
    BoxLayout:
        orientation: 'horizontal'
        height: 25
        size_hint_y: None
        pos_hint: {'top': 1}
        Label:
            text: "The files you chose are:"
        Button:
            text: 'Clear all files'
            width: 150
            size_hint_x: None
            on_release: self.dispatch('on_clear_files')
    ScrollView:
        FileList:
            id: file_list
            height: 25 * len(self.children) / 3
            size_hint_y: None


<FileList>:
    cols: 3

<FileLabel>:
    halign: 'right'
    text_size: self.size
    shorten: True
    shorten_from: 'left'
